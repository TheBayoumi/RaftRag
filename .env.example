# Environment Configuration
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=RAFT-RAG-Server
VERSION=1.0.0
HOST=0.0.0.0
PORT=8000

# Model Configuration
DEFAULT_BASE_MODEL=mistralai/Mistral-7B-Instruct-v0.2
MODEL_CACHE_DIR=./data/models
MAX_MODEL_CACHE_SIZE=3

# Database
DATABASE_URL=sqlite:///./data/metadata/raft_rag.db

# Vector Store
CHROMA_PERSIST_DIR=./data/vectorstore
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST=7.0;7.5;8.0;8.6

# HuggingFace
HF_HOME=./data/huggingface
HF_TOKEN=


# Training Defaults
DEFAULT_BATCH_SIZE=4
DEFAULT_EPOCHS=3
DEFAULT_LEARNING_RATE=2e-4
DEFAULT_LORA_RANK=16
DEFAULT_LORA_ALPHA=32

# RAG Defaults (Document Chunking)
DEFAULT_CHUNK_SIZE=512
DEFAULT_CHUNK_OVERLAP=100
DEFAULT_TOP_K=5
DEFAULT_SIMILARITY_THRESHOLD=0.7

# RAG LLM Settings (Query Answering)
RAG_SYSTEM_PROMPT_MODE=strict  
RAG_LLM_MODEL=meta-llama/Llama-3.2-3B-Instruct
RAG_EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
RAG_TEMPERATURE=0.2
RAG_MAX_TOKENS=1024
RAG_CONTEXT_WINDOW=3
RAG_MAX_CONTEXT_TOKENS=4000

# RAG Pipeline Settings (raganything)
RAG_PARSER=mineru
RAG_PARSE_METHOD=auto
ENABLE_RAG_IMAGE_PROCESSING=False
ENABLE_RAG_TABLE_PROCESSING=False
ENABLE_RAG_EQUATION_PROCESSING=False

# Reranker Settings
RERANKER_ENABLED=True
RERANKER_MODEL=ms-marco-MiniLM-L-12-v2
RERANK_TOP_K_MULTIPLIER=2
